{
  "compilerOptions": {
    "target": "ES2018",
    "outDir": "dist",
    "strict": true,
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "ignoreDeprecations": "5.0",
    "noUnusedLocals": true
  },
  "exclude": ["public", "protected", "dist"],
  "include": ["src", "server.ts"]
}
